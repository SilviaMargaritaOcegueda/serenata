<div class="card p-3">

<% @services.each do |service|%>

    <div>

      <% if service.photo.attached? %>
        <%= cl_image_tag service.photo.key, height: 150, width: 200, crop: :fill %>
      <% else %>
        <img alt="image" src="https://images.unsplash.com/photo-1567361672830-f7aa558ec4e3?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1170&q=80" class='services-card'>
      <% end %>

    </div>

      <div class="card-body d-flex justify-content-between">

        <%= link_to service.name, service_path(service), class: 'card-title' %>
        <%= "$#{service.rate}" %>

        <% if current_user.user_type == 'Artist' %>
          <%= link_to "Edit service", edit_service_path(service), class: 'btn btn-primary' %>
        <% else %>
          <%= link_to "Book service", new_service_booking_path(service), class: 'btn btn-primary booking-button-services' %>
        <% end %>

      </div>

  <% end %>

</div>
