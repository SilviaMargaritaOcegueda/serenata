<div class="navbar navbar-expand-sm navbar-lewagon">
  <%= link_to "Serenata", root_path, class: "nav-link nav-logo" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "My bookings", bookings_path, class: "nav-link" %>
        </li>
        <li class="nav-item nav-link active" id="user-greeting">
          <%= "Hello, #{current_user.name}" %>
        </li>
        <li class="nav-item dropdown">
          <%= render 'shared/avatar' %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", method: :delete %>
            <% if current_user.user_type == 'Event host' %>
              <%= link_to "List an event (Coming Soon)", root_path, class: "dropdown-item" %>
            <% else %>
              <%= link_to "My services", services_path, class: "dropdown-item" %>
              <%= link_to "Add a service", new_service_path, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
      <% else %>
        <%= link_to "Log in", new_user_session_path, class: "nav-link"  %>
        <%= link_to "Sign up", new_user_registration_path, class: "nav-link"  %>
      <% end %>
    </ul>
  </div>
</div>
